<% form_for :session, :url => session_path do |form| %>

		<table>

		<tr>
	    <td><%= form.label :email %></td>
	    <td><%= form.text_field :email %></td>
		</tr>

		<tr>
	    <td><%= form.label :password %></td>
	    <td><%= form.password_field :password %></td>
		</tr>

		<tr>
	    <td><%= form.check_box :remember_me %></td>
	    <td><%= form.label :remember_me %></td>
		</tr>

		<tr>
	   	<td><%= form.submit "Sign in", :disable_with => "Please wait..." %></td>
		</tr>

		</table>
<% end %>

<ul>
  <li>
    <%= link_to "Sign up", new_user_path %>
  </li>
  <li>
    <%= link_to "Forgot password?", new_password_path %>
  </li>
</ul>
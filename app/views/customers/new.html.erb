	<% form_for @customer , :html => { :class => 'form' } do |f| %>
		<table>
		<%= hidden_field_tag :messenger_id, @messenger.id %>

		<tr>
			<td><%= f.label :name %></td>
			<td><%= f.text_field :name %></td>
		</tr>

		<tr>
			<td><%= f.label :email %></td>
			<td><%= f.text_field :email %></td>
		</tr>

		<tr>
			<td><%= f.label :phone %>	</td>
			<td><%= f.text_field :phone %>	</td>
		</tr>

		<tr><td></td><td><%= f.submit "send to messenger" %></td></tr>

		</table>
	<% end %>
